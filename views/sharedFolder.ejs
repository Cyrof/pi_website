<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="sharedfolder.css">
    <title>SharedFolder</title>
</head>

<body style="background-color: #232327;">
    <!-- include nav bar -->
    <%- include('./partials/side_bar'); %>
        <div class="wrapper">
            <div class="container">
                <table class="folder">
                    <% if (content) {%>
                        <tr>
                            <th>Filename</th>
                            <th>Type</th>
                            <th>Size</th>
                            <th>Data Modified</th>
                            <th>Download</th>
                        </tr>
                        <% for (const obj in content) {%>
                            <tr class="file">
                                <% for (const key in content[obj]) {%>
                                    <td>
                                        <% if (dir) {%>
                                            <a href="/sharedFolder?path=<%= content[obj]['name'] %>&dir=<%= dir %>"><%= content[obj][key] %></a>
                                        <% } else {%>
                                            <a href="/sharedFolder?path=<%= content[obj]['name'] %>"><%= content[obj][key] %></a>
                                        <% } %>
                                    </td>
                                <% } %>
                                <td>
                                    <div class="DbtnBox">
                                        <% if (dir) {%>
                                            <a href="/sharedFolder/download?path=<%= content[obj]['name'] %>&dir=<%= dir %>" class="Dbtn"><i class="bi bi-download"></i>Download</a>
                                        <% } else {%>
                                            <a href="/sharedFolder/download?path=<%= content[obj]['name'] %>" class="Dbtn"><i class="bi bi-download"></i>Download</a>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </table>
            </div>
        </div>

</body>

</html>